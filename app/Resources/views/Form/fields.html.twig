{% block field_errors %}
{% spaceless %}
    {% if errors|length > 0 %}
    <ul class="alert alert-error">
        {% for error in errors %}
            <li>{{ error.messageTemplate|trans(error.messageParameters, 'validators') }}</li>
        {% endfor %}
    </ul>
    {% endif %}
{% endspaceless %}
{% endblock field_errors %}</ul>

{% block field_row %}
{% spaceless %}
    <div class="control-group">
        {{ form_label(form, label|default(null), { 'attr': {'class': 'control-label'} }) }}
        <div class="controls">
            {{ form_errors(form)}}
            {{ form_widget(form)}}
        </div>
    </div>
{% endspaceless %}
{% endblock field_row %}
