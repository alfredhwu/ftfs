{% extends 'FTFSPreferenceBundle::layout.html.twig' %}
{% block body_content %}
<form class="form-horizontal" action="" method="post" {{ form_enctype(form) }}>
    <legend class="btn-group">
    {% if auto is defined and auto %}
        Register a new event for auto notification
    {% else %}
        Register a new event for other notification
    {% endif %}
    </legend>
    <fieldset>
        {{ form_widget(form) }}
    </fieldset>
    <div class="form-actions">
        <button type="submit" class="btn btn-primary">
            <i class="icon-ok icon-white"></i>
            submit
        </button>
    </div>
</form>
{% endblock %}
