{% extends "::layout.html.twig" %}
{% block body_content %}
<table class="table table-striped table-condensed table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Username</th>
            <th>Roles</th>
            <th>Surname</th>
            <th>First Name</th>
            <th>Company</th>
            <th>E-mail</th>
        </tr>
    </thead>
    <tbody>
    {% set i = 0 %}
    {% for user in users %}
        <tr>
    {% set i = i + 1 %}
            <td>{{ i }}</td>
            <td>{{ user.username }}</td>
            <td>ROLE_USER</td>
            <td>user@example.com</td>
    {% endfor %}
        </tr>
    </tbody>
</table>
{% endblock body_content %}
