{% extends "FTFSUserBundle::layout.html.twig" %}

{% form_theme form theme %}

{% block body_menu %}
{% include "FTFSUserBundle:Profile:body_menu.html.twig" %}
{% endblock %}

{% block login_status %}
{% endblock %}

{% block fos_user_content %}
<form action="{{ path('fos_user_change_password') }}" {{ form_enctype(form) }} method="POST" class="form-horizontal">
    <legend>Changing your password:</legend>
    <fieldset>
        {{ form_widget(form) }}
        <div class="form-actions">
            <input class="btn btn-primary" type="submit" value="{{ 'change_password.submit'|trans({}, 'FOSUserBundle') }}" />
            <a class="btn" href="{{ path('fos_user_profile_show') }}">Cancel</a>
        </div>
    </fieldset>
</form>
{% endblock fos_user_content %}
