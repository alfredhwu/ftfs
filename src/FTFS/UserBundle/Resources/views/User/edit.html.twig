{% extends "FTFSUserBundle::layout.html.twig" %}

{% form_theme form "FTFSUserBundle::form.html.twig" %}

{% block body_menu %}
{% include "FTFSUserBundle:User:edit_body_menu.html.twig" with { 'username' : user.username } %}
{% endblock %}

{% block body_content %}
<form class="form-horizontal" action="{{ path('ftfsuserbundle_user_edit', { 'username' : user.username }) }}" {{ form_enctype(form) }} method="POST">
    <fieldset>
        <legend>
            User Profile
            <span class="btn-group pull-right">
                <input class="btn btn-primary" type="submit" value="Save">
            </span>
        </legend>
        {{ form_widget(form) }}
    </fieldset>
    <div class="form-actions">
        <input class="btn btn-primary" type="submit" value="Save Modifications">
    </div>
</form>
{% endblock body_content %}
