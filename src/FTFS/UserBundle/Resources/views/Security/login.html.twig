{% extends "FTFSUserBundle::layout.html.twig" %}

{% block navbar_session %}
{% endblock %}

{% block navbar_menu %}
{% endblock %}

{% block body %}
<div class="row-fluid">
    <div class="span3"></div>
    <div class="span6">
        <form action="{{ path('fos_user_security_check') }}" method="post" class="form-horizontal">
            <fieldset>
                <legend>Sign in with your username and password</legend>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}">    
                {% if error %}
                    <div class="alert alert-error">{{ error|trans({}, 'FOSUserBundle') }}</div>
                {% endif %}
                <div class="control-group">
                    <label class="control-label" for="username">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>
                    <div class="controls">
                        <input type="text" id="username" name="_username" value="{{ last_username }}""> 
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="password">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>
                    <div class="controls">
                        <input type="password" id="password" name="_password">
                    </div>
                </div>
                <div class="control-group">
                    <div class="controls">
                        <label class="checkbox" for="remember_me">
                            <input type="checkbox" id="remember_me" name="_remember_me" value="on">
                            {{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}
                        </label>
                    </div>
                </div>
                <div class="form-actions">
                    <input class="btn btn-primary" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" />
                    <a href="{{ path('fos_user_registration_register') }}" class="btn btn-success">Register</a>
                </div>
            </fieldset>
        </form>
    </div>
    <div class="span3"></div>
</div>
{% endblock %}
