{% extends "FOSUserBundle::base.html.twig" %}

{% block fos_user_content %}
<form action="{{ path('fos_user_security_check') }}" method="post" class="form-horizontal">
    <fieldset>
        <legend style="text-align:center">
            Welcome to Fujitsu Telecom France SAS <br> Support Service 
        </legend>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}">    
        {% if error %}
            <div class="alert alert-error">{{ error|trans({}, 'FOSUserBundle') }}</div>
        {% endif %}
        <div class="control-group">
            <label class="control-label" for="username">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>
            <div class="controls">
                <input type="text" id="username" name="_username" value="{{ last_username }}"> 
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="password">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>
            <div class="controls">
                <input type="password" id="password" name="_password">
            </div>
        </div>
        <div class="control-group">
            <div class="controls">
                <label class="checkbox" for="remember_me">
                    <input type="checkbox" id="remember_me" name="_remember_me" value="on">
                    {{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}
                </label>
            </div>
        </div>
        <div class="form-actions">
            <input class="btn btn-primary" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" />
            &nbsp;
            &nbsp;
            &nbsp;
            <a href="{{ path('fos_user_resetting_request') }}" ><u>Forget your password?</u></a>
            &nbsp;
            &nbsp;
            &nbsp;
            <a href="{{ path('fos_user_registration_register') }}" >Register</a>
        </div>
    </fieldset>
</form>
<p class="alert alert-info">
    test only, to be deleted in prod version<br>
    login as:<br>
    admin:admin -- admin<br>
    client:client -- client<br>
    agent:agent -- agent
</p>
{% endblock %}
