{% extends "FTFSCrudBundle:Crud:index.html.twig" %}

{% block operations %}
    {{ parent() }}
    <a href="{{ path(prefix~'_assign', { 'id' : entity.id }) }}" rel="tooltip" title="{{ (prefix~'_table_action_assign_tooltip')|replace('_', '.')|trans({}, 'crud') }}">
        <i class="icon-share"></i>
    </a>
{% endblock %}

{% block thead %}
    <th>{{ 'ftfs.servicebundle.service.table.name' | trans({}, 'crud') }}</th>
    <th>{{ 'ftfs.servicebundle.service.table.type' | trans({}, 'crud') }}</th>
    <th>{{ 'ftfs.servicebundle.service.table.severity' | trans({}, 'crud') }}</th>
    <th>{{ 'ftfs.servicebundle.service.table.priority' | trans({}, 'crud') }}</th>
    <th>{{ 'ftfs.servicebundle.service.table.status' | trans({}, 'crud') }}</th>
    <th>{{ 'ftfs.servicebundle.service.table.last.modified.at' | trans({}, 'crud') }}</th>
    <th>{{ 'ftfs.servicebundle.service.table.assigned.to' | trans({}, 'crud') }}</th>
    <th>{{ 'ftfs.servicebundle.service.table.request.received.at' | trans({}, 'crud') }}</th>
    <th>{{ 'ftfs.servicebundle.service.table.opened.at' | trans({}, 'crud') }}</th>
    <th>{{ 'ftfs.servicebundle.service.table.resolved.at' | trans({}, 'crud') }}</th>
    <th>{{ 'ftfs.servicebundle.service.table.closed.at' | trans({}, 'crud') }}</th>
{% endblock %}

{% block tbody %}
    <td>{{ entity.name }}</td>
    <td>{{ entity.type }}</td>
    <td>{{ entity.severity }}</td>
    <td>{{ entity.priority }}</td>
    <td>{{ entity.status }}</td>
    <td>{{ entity.lastModifiedAt | date('Y-m-d H:i:s') }}</td>
    <td>{{ entity.assignedTo }}</td>
    <td>{{ entity.requestReceivedAt | date('Y-m-d H:i:s') }}</td>
    <td>{{ entity.openedAt | date('Y-m-d H:i:s') }}</td>
    <td>{{ entity.resolvedAt | date('Y-m-d H:i:s') }}</td>
    <td>{{ entity.closedAt | date('Y-m-d H:i:s') }}</td>
{% endblock %}
