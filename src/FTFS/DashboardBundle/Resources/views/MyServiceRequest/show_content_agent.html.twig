{% extends 'FTFSCrudBundle:Crud:show_content.html.twig' %}

{% block crud_actions_icons %}
    {% if entity.assignedTo==app.user.username and entity.status=='30_awaiting' %}
        {# new arriving request assigned to me #}
        <a class="btn btn-small" href="{{ path(prefix~'_edit', { 'id' : entity.id }) }}" rel="tooltip" title="{{ 'ftfs.crud.form.action.show.modify.tooltip'|trans({}, 'crud') }}" data-placement="bottom">
            <i class="icon-pencil"></i>
        </a>
        <a class="btn btn-small" href="{{ path(prefix~'_accept', { 'id' : entity.id }) }}" rel="tooltip" title="{{ 'ftfs.dashboardbundle.myservicerequest.form.action.show.accept.tooltip'|trans({}, 'crud') }}" data-placement="bottom">
            <i class="icon-share-alt"></i>
        </a>
        <a class="btn btn-small" href="{{ path(prefix~'_reject', { 'id' : entity.id }) }}" rel="tooltip" title="{{ 'ftfs.dashboardbundle.myservicerequest.form.action.show.reject.tooltip'|trans({}, 'crud') }}" data-placement="bottom">
            <i class="icon-ban-circle"></i>
        </a>
    {% endif %}
    {% if entity.assignedTo is null and entity.status == '30_awaiting' %}
        {# new arriving request, not assigned #}
        <a class="btn btn-small" href="{{ path(prefix~'_take', { 'id' : entity.id }) }}" rel="tooltip" title="{{ 'ftfs.dashboardbundle.myservicerequest.form.action.show.take.tooltip'|trans({}, 'crud') }}" data-placement="bottom">
            <i class="icon-hand-up"></i>
        </a>
    {% endif %}
    <a class="btn btn-small" href="{{ path(prefix~'_index') }}" rel="tooltip" title="{{ 'ftfs.crud.form.action.show.list.tooltip'|trans({}, 'crud') }}" data-placement="bottom">
        <i class="icon-list"></i>
    </a>
{% endblock %}

{% block crud_actions %}
    <div class="btn-toolbar">
        <div class="btn-group">
            <a href="{{ path(prefix~'_index') }}" class="btn btn-primary">
                <i class="icon-list icon-white"></i>
                {{ 'ftfs.crud.form.action.show.list'|trans({}, 'crud') }}
            </a>
        </div>
        {% if entity.assignedTo==app.user.username and entity.status=='30_awaiting' %}
        <div class="btn-group dropup">
            {# new arriving request assigned to me #}
            <a href="{{ path(prefix~'_accept', { 'id' : entity.id }) }}" class="btn">
                <i class="icon-share-alt"></i>
                {{ 'ftfs.dashboardbundle.myservicerequest.form.action.show.accept'|trans({}, 'crud') }}
            </a>
            <a href="#" class="btn dropdown-toggle" data-toggle="dropdown">
                <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
                <li><a href="{{ path(prefix~'_edit', { 'id' : entity.id }) }}">
                    <i class="icon-pencil"></i>
                    {{ 'ftfs.crud.form.action.show.modify'|trans({}, 'crud') }}
                </a></li>
                <li><a href="{{ path(prefix~'_reject', { 'id' : entity.id }) }}">
                    <i class="icon-ban-circle"></i>
                    {{ 'ftfs.dashboardbundle.myservicerequest.form.action.show.reject'|trans({}, 'crud') }}
                </a></li>
                <li><a href="{{ path(prefix~'_accept', { 'id' : entity.id }) }}">
                    <i class="icon-share-alt"></i>
                    {{ 'ftfs.dashboardbundle.myservicerequest.form.action.show.accept'|trans({}, 'crud') }}
                </a></li>
            </ul>
        </div>
        {% endif %}
        {% if entity.assignedTo is null and entity.status == '30_awaiting' %}
        <div class="btn-group">
            {# new arriving request, not assigned #}
            <a href="{{ path(prefix~'_take', { 'id' : entity.id }) }}" class="btn">
                <i class="icon-hand-up"></i>
                {{ (prefix~'_form_action_show_take')|replace('_', '.')|trans({}, 'crud') }}
            </a>
        </div>
        {% endif %}
    </div>
{% endblock %}
