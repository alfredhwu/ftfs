{% extends 'FTFSCrudBundle:Crud:edit_content.html.twig' %}

{% block crud_actions_icons %}
    <a href="javascript: submitform('nosend')" class="btn btn-small" rel="tooltip" title="{{ (prefix~'_form_action_edit_update_nosend_tooltip')|replace('_', '.')|trans({}, 'crud') }}" data-placement="bottom">
        <i class="icon-ok"></i>
    </a>
    {% if 'rejected'==entity.status %}
    <a href="javascript: submitform('send')" class="btn btn-small" rel="tooltip" title="{{ (prefix~'_form_action_edit_update_resend_tooltip')|replace('_', '.')|replace('_', '.')|trans({}, 'crud') }}" data-placement="bottom">
        <i class="icon-envelope"></i>
    </a>
    {% else %}
    <a href="javascript: submitform('send')" class="btn btn-small" rel="tooltip" title="{{ (prefix~'_form_action_edit_update_send_tooltip')|replace('_', '.')|replace('_', '.')|trans({}, 'crud') }}" data-placement="bottom">
        <i class="icon-envelope"></i>
    </a>
    {% endif %}
    <a class="btn btn-small" href="{{ path(prefix~'_show', { 'id' : entity.id }) }}" rel="tooltip" title="{{ 'ftfs.crud.form.action.edit.cancel.tooltip'|trans({}, 'crud') }}" data-placement="left">
        <i class="icon-remove"></i>
    </a>
    <a class="btn btn-small" href="{{ path(prefix~'_index') }}" rel="tooltip" title="{{ 'ftfs.crud.form.action.edit.list.tooltip'|trans({}, 'crud') }}" data-placement="left">
        <i class="icon-list"></i>
    </a>
{% endblock %}

{% block crud_form %}
    <input type="hidden" name="update_mode" value="nosend">
    {{ parent() }}
{% endblock %}


{% block crud_actions %}
    <div class="btn-toolbar">
        <div class="btn-group dropup">
            <a class="btn btn-primary dropdown-toggle" data-toggle="dropdown" href="#">
                Submit
                <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
                {% if 'rejected'==entity.status %}
                <li><a href="javascript: submitform('send')">{{ (prefix~'_form_action_edit_update_resend')|replace('_', '.')|trans({}, 'crud') }}</a></li>
                {% else %}
                <li><a href="javascript: submitform('send')">{{ (prefix~'_form_action_edit_update_send')|replace('_', '.')|trans({}, 'crud') }}</a></li>
                {% endif %}
                <li><a href="javascript: submitform('nosend')">{{ (prefix~'_form_action_edit_update_nosend')|replace('_', '.')|trans({}, 'crud') }}</a></li>
            </ul>
        </div>
        <div class="btn-group">
            <a href="{{ path(prefix~'_show', { 'id' : entity.id }) }}" class="btn">{{ 'ftfs.crud.form.action.edit.cancel'|trans({}, 'crud') }}</a>
        </div>
    </div>
{% endblock %}
