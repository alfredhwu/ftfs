{% extends "FTFSCrudBundle:Crud:edit_content.html.twig" %}

{% block crud_actions_icons %}
    <a href="#" class="btn btn-small crud-submit" crud-submit-mode="edit_only" rel="tooltip" title="{{ (prefix~'.form.action.edit.edit_only.tooltip')|trans({}, 'crud') }}" data-placement="bottom">
        <i class="icon-ok"></i>
    </a>
    {% if entity.status in ['created', 'interrupted'] %}
    <a href="#" class="btn btn-small crud-submit" crud-submit-mode="edit_submit" rel="tooltip" title="{{ (prefix~'.form.action.edit.edit_submit.tooltip')|trans({}, 'crud') }}" data-placement="bottom">
        <i class="icon-envelope"></i>
    </a>
    {% endif %}
{% endblock %}

{% block crud_form %}
    <input type="hidden" id="role" name="role" value="client">
    <input type="hidden" id="mode" name="mode" value="edit_only">
    {{ parent() }}
{% endblock %}


{% block crud_actions %}
    <div class="btn-group dropup">
        <a class="btn btn-primary crud-submit" crud-submit-mode="edit_only" href="#"><i class="icon-ok icon-white"></i>{{ (prefix~'.form.action.edit.edit_only')|trans({}, 'crud') }}</a>
        <a class="btn btn-primary dropdown-toggle" data-toggle="dropdown" href="#">
            <span class="caret"></span>
        </a>
        <ul class="dropdown-menu">
            {% if entity.status in ['created', 'interrupted'] %}
            <li><a class="crud-submit" crud-submit-mode="edit_submit" href="#">
                <i class="icon-envelope"></i>
                {{ (prefix~'.form.action.edit.edit_submit')|trans({}, 'crud') }}
            </a></li>
            {% endif %}
            <li><a class="crud-submit" crud-submit-mode="edit_only" href="#">
                <i class="icon-ok"></i>
                {{ (prefix~'.form.action.edit.edit_only')|trans({}, 'crud') }}
            </a></li>
        </ul>
    </div>
{% endblock %}
