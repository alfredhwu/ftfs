{% extends 'FTFSDashboardBundle::body_menu.html.twig' %}
{% block dash_menu_content %}
    <li class="nav-header">My Service Tickets</li>
    {# draft, opened #}
    <li class="navmenu-item navmenu-item-countable"><a href="{{ path('ftfs_dashboardbundle_myservice_index') }}"><i class="icon-home"></i> My Current Service <span class="pull-right">{% if app.session.has('counter-menu-current') %}{{ app.session.get('counter-menu-current') }}{% else %}...{% endif %}</span></a></li>
    <li class="navmenu-item"><a href="{{ path('ftfs_dashboardbundle_myservice_new') }}"><i class="icon-edit"></i> Request a New Service</a></li>

    <li class="divider"></li>

    <li class="navmenu-item navmenu-item-countable"><a href="{{ path('ftfs_dashboardbundle_myservice_index', { 'status' : 'all' }) }}"><i class="icon-list"></i> All My Service Tickets <span class="pull-right">{% if app.session.has('counter-menu-all') %}{{ app.session.get('counter-menu-all') }}{% else %}...{% endif %}</span></a></li>

    <li class="divider"></li>

    <li class="navmenu-item navmenu-item-countable"><a href="{{ path('ftfs_dashboardbundle_myservice_index', { 'status' : 'pending' }) }}"><i class="icon-indent-left"></i> My Pending Requests <span class="pull-right badge badge-important">{% if app.session.has('counter-menu-pending') %}{{ app.session.get('counter-menu-pending') }}{% else %}...{% endif %}</span></a></li>
    <li class="navmenu-item navmenu-item-countable"><a href="{{ path('ftfs_dashboardbundle_myservice_index', { 'status' : 'created' }) }}"><i class="icon-indent-left"></i> My Service Requests <span class="pull-right badge badge-inverse">{% if app.session.has('counter-menu-created') %}{{ app.session.get('counter-menu-created') }}{% else %}...{% endif %}</span></a></li>
