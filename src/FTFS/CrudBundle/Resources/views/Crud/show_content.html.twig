{% extends "FTFSCrudBundle::layout.html.twig" %}

{% form_theme form "FTFSCrudBundle::form.html.twig" %}

{% block crud %}
<form class="form-horizontal">
    <legend class="btn-group">
        <a class="btn btn-small" href="{{ path(prefix~'_index') }}" rel="tooltip" title="{{ 'ftfs.crud.form.action.show.list.tooltip'|trans({}, 'crud') }}" data-placement="bottom">
            <i class="icon-list"></i>
        </a>
        {% block crud_actions_icons %}
        {% endblock %}
        {% if read_only is not defined or not read_only %}
        <a class="btn btn-small" href="{{ path(prefix~'_edit', { 'id' : entity.id }) }}" rel="tooltip" title="{{ 'ftfs.crud.form.action.show.modify.tooltip'|trans({}, 'crud') }}" data-placement="bottom">
            <i class="icon-pencil"></i>
        </a>
            {% if removable is not defined or not removable %}
            <a class="btn btn-small" href="{{ path(prefix~'_delete', { 'id' : entity.id }) }}" rel="tooltip" title="{{ 'ftfs.crud.form.action.show.delete.tooltip'|trans({}, 'crud') }}" data-placement="bottom">
                <i class="icon-trash"></i>
            </a>
            {% endif %}
        {% endif %}
        <strong class="btn">{{ (prefix~'.form.legend.show')|trans({}, 'crud') }}</strong>
    </legend>
    
    <fieldset>
    {{ form_widget(form) }}
    </fieldset>

    <div class="form-actions btn-toolbar">
        <div class=btn-group>
            <a href="{{ path(prefix~'_index') }}" class="btn btn-primary">
                <i class="icon-list icon-white"></i>
                {{ 'ftfs.crud.form.action.show.list'|trans({}, 'crud') }}
            </a>
        </div>
        {% if read_only is not defined or not read_only %}
        <div class=btn-group>
            <a href="{{ path(prefix~'_edit', { 'id' : entity.id }) }}" class="btn">
                <i class="icon-pencil"></i>
                {{ 'ftfs.crud.form.action.show.modify'|trans({}, 'crud') }}
            </a>
        </div>
        {% endif %}
        {% block crud_actions %}
        {% endblock %}
    </div>
</form>
{% endblock %}
