{% extends "FTFSCrudBundle::layout.html.twig" %}

{% form_theme form "FTFSCrudBundle::form.html.twig" %}

{% block crud %}
<form name="{{ prefix~'_form' }}" class="form-horizontal" action="{{ path(prefix~'_edit', { 'id' : entity.id }) }}" method="post" {{ form_enctype(form) }}>
    <legend class="btn-group">
        <a class="btn btn-small" href="{{ app.session.get('index') }}" rel="tooltip" title="{{ 'ftfs.crud.form.action.edit.list.tooltip'|trans({}, 'crud') }}" data-placement="bottom">
            <i class="icon-list"></i>
        </a>
        {% block crud_actions_icons %}
            <button class="btn btn-small" type="submit" rel="tooltip" title="{{ 'ftfs.crud.form.action.edit.update.tooltip'|trans({}, 'crud') }}" data-placement="bottom">
                <i class="icon-ok"></i>
            </button>
        {% endblock %}
        <a class="btn btn-small" href="{{ path(prefix~'_show', { 'id' : entity.id }) }}" rel="tooltip" title="{{ 'ftfs.crud.form.action.edit.cancel.tooltip'|trans({}, 'crud') }}" data-placement="bottom">
            <i class="icon-remove"></i>
        </a>
        <strong class="btn">{{ (prefix~'.form.legend.edit')|trans({}, 'crud') }}</strong>
    </legend>
    {% block crud_form %}
    <fieldset>
    {{ form_widget(form) }}
    </fieldset>
    {% endblock %}
    <div class="form-actions">
        <div class="btn-toolbar">
            {% block crud_actions %}
            <div class="btn-group">
                <input type="submit" class="btn btn-primary" value="{{ 'ftfs.crud.form.action.edit.update'|trans({}, 'crud') }}">
            </div>
            {% endblock %}
            <div class="btn-group">
                <a href="{{ path(prefix~'_show', { 'id' : entity.id }) }}" class="btn">{{ 'ftfs.crud.form.action.edit.cancel'|trans({}, 'crud') }}</a>
            </div>
        </div>
    </div>
</form>
{% endblock %}
