{% extends "FTFSCrudBundle::layout.html.twig" %}

{% form_theme form "FTFSCrudBundle::form.html.twig" %}

{% block crud %}
<form name="{{ prefix~'_form' }}" class="form-horizontal" action="{{ path(prefix~'_edit', { 'id' : entity.id }) }}" method="post" {{ form_enctype(form) }}>
    <legend>
        <span>{{ (prefix~'_form_legend_edit')|replace({'_' : '.'})|trans({}, 'crud') }}</span>
        <div class="btn-group pull-right">
        {% block crud_actions_icons %}
            <button class="btn btn-small" type="submit" rel="tooltip" title="{{ 'ftfs.crud.form.action.edit.update.tooltip'|trans({}, 'crud') }}" data-placement="bottom">
                <i class="icon-ok"></i>
            </button>
            <a class="btn btn-small" href="{{ path(prefix~'_show', { 'id' : entity.id }) }}" rel="tooltip" title="{{ 'ftfs.crud.form.action.edit.cancel.tooltip'|trans({}, 'crud') }}" data-placement="left">
                <i class="icon-remove"></i>
            </a>
            <a class="btn btn-small" href="{{ path(prefix~'_index') }}" rel="tooltip" title="{{ 'ftfs.crud.form.action.edit.list.tooltip'|trans({}, 'crud') }}" data-placement="left">
                <i class="icon-list"></i>
            </a>
        {% endblock %}
        </div>
    </legend>
    {% block crud_form %}
    <fieldset>
    {{ form_widget(form) }}
    </fieldset>
    {% endblock %}
    <div class="form-actions">
    {% block crud_actions %}
        <input type="submit" class="btn btn-primary" value="{{ 'ftfs.crud.form.action.edit.update'|trans({}, 'crud') }}">
        <a href="{{ path(prefix~'_show', { 'id' : entity.id }) }}" class="btn">{{ 'ftfs.crud.form.action.edit.cancel'|trans({}, 'crud') }}</a>
    {% endblock %}
    </div>
</form>
{% endblock %}
